<Window x:Class="Library_Management_System.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_Management_System"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Home" Height="500" Width="800">
    <Grid Margin="-2,0,2,0">
        <Button x:Name="btn_explorer" Content="Explore Books" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="40" Margin="10,15,0,0"/>
        <Button x:Name="btn_issue_return" Content="Book Details" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="40" Margin="10,56,0,0"/>
        <Button x:Name="btn_details" Content="Issue / Return Book" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="40" Margin="10,96,0,0"/>
        <Button x:Name="btn_issue" Content="Issue Details" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="40" Margin="10,136,0,0"/>
        <Button x:Name="btn_return" Content="Manage Books" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="40" Margin="10,176,0,0" />
        <Button x:Name="btn_issue_details" Content="Manage Members" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="40" Margin="10,216,0,0"/>
        <Button x:Name="button_Copy5" Content="Issue Details" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="40" Margin="10,256,0,0"/>
        <Button x:Name="button_Copy6" Content="Book Categories" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="40" Margin="10,296,0,0"/>
        <Button x:Name="button_Copy7" Content="Book languages" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="40" Margin="10,336,0,0"/>
        <Button x:Name="button_Copy8" Content="Help" HorizontalAlignment="Left" VerticalAlignment="Top" Width="155" Height="40" Margin="10,376,0,0"/>

    </Grid>
</Window>
